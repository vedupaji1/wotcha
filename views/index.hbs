                console.log("HIHI" + stss)

                let real_height = (parseInt((slider_1.value * 10) + m_height) / 10);
                console.log(real_height + "rem");
                console.log(real_height * 1.22 + "rem");
                iff1.style.height = real_height + "rem";
                iff1.style.width = (real_height * 1.22) + "rem";

                console.log(parseInt(m_height1 + (slider_1.value * 10)) / 10 + "rem")
                console.log((parseInt(m_height1 + (slider_1.value * 10)) / 10) * 1.25 + "rem")
                ddiv2.style.height = ((parseInt(m_height1 + (slider_1.value * 10)) / 10) + "rem");
                ddiv2.style.width = (((parseInt(m_height1 + (slider_1.value * 10)) / 10) * 1.25) + "rem");
                if (slider_1.value < 9) {
                    ddiv2.style.marginTop = 16 - slider_1.value + "rem";
                }
            }

        }

    </script>
</body>

</html>
