                iff1.setAttribute('src', url_main1)
                iff1.style.display = "block"
                if (ii == 0) {
                    m_height = iff1.clientHeight;
                    m_height1 = ddiv2.clientHeight;
                    console.log(`Hello ${m_height} ${m_height1}`)
                }

                ii++;
            }
        }
        bbu.addEventListener('click', watchhh)




